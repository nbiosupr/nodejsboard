<html>
  <head>
    <title>Main</title>
    <link rel="stylesheet" type="text/css" href="css/style.css">
    <script src="http://code.jquery.com/jquery-latest.min.js"></script>
  </head>
  <body>
    <div class="">
      <h1>NODE JS BOARD</h1>
      <h2>Practice how to use node js, express, ejs</h2>
    </div>
    <div class="nodejsboard">
      <div class="postListBox">
        <ul>
            <%postList.forEach(function(postName){%>
                <li>
                    <input type="checkbox" name="cb_<%=postName%>" value="<%=postName%>" hidden>
                    <a href="post/<%=postName%>">
                        <%=postName%>
                    </a>
                </li>
            <%});%>
        </ul>
      </div>
      <div class="functionBar">
        <button type="button" class="functionButton" name="newPost" onclick="window.location.href='/newpost'">New</button>
        <button type="button" class="functionButton" name="deletePost" >Delete</button>
        <button type="button" class="functionButton" name="deleteOk" hidden>Drop</button>
      </div>
    </div>
  </body>
</html>
